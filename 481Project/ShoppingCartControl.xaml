<UserControl
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	mc:Ignorable="d"
	x:Class="_81Project.ShoppingCartControl"
	x:Name="UserControl"
	d:DesignWidth="197" d:DesignHeight="30.5" Background="White" ScrollViewer.VerticalScrollBarVisibility="Disabled" BorderThickness="0,0,0,1" BorderBrush="Black" Width="190">
	<UserControl.Triggers>
		<EventTrigger RoutedEvent="FrameworkElement.Loaded"/>
	</UserControl.Triggers>

	<Grid x:Name="LayoutRoot">
		<TextBlock x:Name="ClassName" Margin="8,5,50,5" TextWrapping="Wrap"/>
		<Button x:Name="Remove" Content="X" Margin="168,5,0,5" Background="#FFF34343" FontWeight="Bold" RenderTransformOrigin="-4,0.615" HorizontalAlignment="Left" Width="19"/>
	</Grid>
</UserControl>